# ===========================================
# Jitsi Meet - Configuração
# ===========================================
# Copie este arquivo para .env e ajuste os valores

# Domínio público do Jitsi (deve apontar para o servidor)
PUBLIC_URL=https://meet.universidademotochefe.com.br

# IP público do servidor (para o JVB anunciar o IP correto para WebRTC)
JVB_ADVERTISE_IPS=93.127.211.241

# Timezone
TZ=America/Sao_Paulo

# ===========================================
# Autenticação (deixe 0 para acesso livre)
# ===========================================
ENABLE_AUTH=0
ENABLE_GUESTS=1
ENABLE_LOBBY=0
ENABLE_PREJOIN_PAGE=0
ENABLE_WELCOME_PAGE=0
ENABLE_CLOSE_PAGE=0
ENABLE_REQUIRE_DISPLAY_NAME=0
ENABLE_CALENDAR=0
DISABLE_DEEP_LINKING=1

# ===========================================
# Segredos XMPP (gerados automaticamente pelo setup.sh)
# NÃO edite manualmente - rode ./setup.sh
# ===========================================
JICOFO_COMPONENT_SECRET=
JICOFO_AUTH_PASSWORD=
JVB_AUTH_PASSWORD=

# ===========================================
# XMPP (não altere a menos que saiba o que faz)
# ===========================================
XMPP_DOMAIN=meet.jitsi
XMPP_SERVER=xmpp.meet.jitsi
XMPP_AUTH_DOMAIN=auth.meet.jitsi
XMPP_MUC_DOMAIN=muc.meet.jitsi
XMPP_INTERNAL_MUC_DOMAIN=internal-muc.meet.jitsi
XMPP_GUEST_DOMAIN=guest.meet.jitsi
JICOFO_AUTH_USER=focus
JVB_AUTH_USER=jvb
JVB_BREWERY_MUC=jvbbrewery
JVB_PORT=10000
JVB_STUN_SERVERS=stun.l.google.com:19302,stun1.l.google.com:19302

# Diretório de configuração persistente
JITSI_CONFIG=./jitsi-config
